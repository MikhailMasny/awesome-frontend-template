{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": "."
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "max-len": [
        "error",
        {
          "code": 140
        }
      ],
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    }
}
